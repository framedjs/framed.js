{
  "name": "framed",
  "description": "A TypeScript Discord bot framework.",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "# DOESN'T WORK ON WINDOWS -> pnpm recursive exec -- rm -rf node_modules; rm shrinkwrap.yaml; rm -rf node_modules",
    "build": "pnpm recursive run build --sort",
    "test": "pnpm recursive run test",
    "test:watch": "pnpm recursive run test:watch",
    "start": "cross-env NODE_ENV=\"production\" pnpm recursive run start",
    "be:start": "cross-env NODE_ENV=\"production\" pnpm start --filter back-end",
    "be:dev": "cross-env NODE_ENV=\"development\" pnpm dev --filter back-end",
    "fe:start": "cross-env NODE_ENV=\"production\" pnpm start --filter front-end",
    "fe:dev": "cross-env NODE_ENV=\"development\" pnpm start --filter front-end",
    "ta:start": "cross-env NODE_ENV=\"production\" pnpm start --filter test-app",
    "ta:dev": "cross-env NODE_ENV=\"development\" pnpm dev --filter test-app"
  },
  "devDependencies": {
    "@types/jest": "^26.0.16",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.14.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "26.6.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4"
  }
}